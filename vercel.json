
{
  "version": 2,
  "builds": [
    {
      "src": "src/server/start-server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/server/start-server.js"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|gif|svg|ico|ttf|woff|woff2))",
      "dest": "/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/index.html"
    }
  ],
  "installCommand": "yarn install"
}
